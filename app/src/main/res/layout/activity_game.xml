<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling">

        <FrameLayout
            android:id="@+id/ad_view_container2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true" />

        <FrameLayout
            android:id="@+id/ad_view_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            app:layout_constraintTop_toBottomOf="@id/ad_view_container2" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="85dp">

            <TextView
                android:id="@+id/chrono"
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:text="yes"
                android:textColor="#F4EFEF" />
        </GridLayout>


        <!-- Carré contenant le texte -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/textContainer"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/Text_game"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/Text_game"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </FrameLayout>

            <GridLayout
                android:id="@+id/gridLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:columnCount="2"
                android:visibility="gone">

                <!-- Boutons pour les choix -->
                <Button
                    android:id="@+id/choice1"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@string/choice1" />

                <Button
                    android:id="@+id/choice2"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@string/choice2" />

                <Button
                    android:id="@+id/choice3"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@string/choice3" />

                <Button
                    android:id="@+id/choice4"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:gravity="center"
                    android:text="@string/choice4" />

            </GridLayout>

            <TextView
                android:id="@+id/swipeView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:minHeight="300dp"
                android:text="Swipe à gauche pour afficher les choix
swipe à droit pour le point qui se clique, secoue pour un message en log d"
                android:visibility="gone" />


            <GridLayout
                android:id="@+id/counterGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/swipeView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:columnCount="5"
                android:rowCount="1"
                android:visibility="gone">

                <TextView
                    android:id="@+id/counterText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="0"
                    android:textSize="24sp" />

            </GridLayout>

            <Button
                android:id="@+id/circleButton1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_columnWeight="1"
                android:background="@drawable/circle_button"
                android:onClick="incrementCounter"
                android:visibility="gone" />

        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
